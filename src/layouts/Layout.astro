---
import { fade } from 'astro:transitions';

import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/public/assets/favicon.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <script defer src="https://shualim.online/wlp/forex/support-gaza/scripts/faq.js"></script>
        <script defer src="https://shualim.online/wlp/forex/support-gaza/scripts/navbar.js"></script>

        <script defer src="https://shualim.online/wlp/forex/support-gaza/scripts/price-color.js"></script>
        <script defer src="https://shualim.online/wlp/forex/support-gaza/scripts/donations.js"></script>
        <script defer src="https://shualim.online/wlp/forex/support-gaza/scripts/quote-card.js"></script>

        <!-- ? Scroll reveal -->
        <script src="https://unpkg.com/scrollreveal"></script>

        <!--? Styles -->
        <link rel="stylesheet" href="https://shualim.online/wlp/forex/support-gaza/styles/donations.css" />

        <!-- ? Adobe Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet" />
    </head>
    <body class="overflow" transition:animate={fade({ duration: '0.5s' })}>
        <slot />
        <div class="modal-overlay" id="modal">
            <div class="modal">
                <button class="modal-close" onclick="closeModal()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>

                <div class="card">
                    <h2 class="card-title">Crypto Donation</h2>

                    <div class="alert">
                        <div class="alert-title">Important</div>
                        <div>Please verify the network and address carefully before sending any cryptocurrency. Sending to the wrong network may result in permanent loss of funds.</div>
                    </div>

                    <div class="tabs">
                        <div class="tab-list">
                            <button class="tab-trigger active" data-tab="popular">Popular Chains</button>
                            <button class="tab-trigger" data-tab="stablecoins">Stablecoins</button>
                        </div>

                        <div id="popular" class="tab-content active"></div>
                        <div id="stablecoins" class="tab-content"></div>
                    </div>

                    <div class="instructions">
                        <h3>Instructions:</h3>
                        <ol>
                            <li>Select your preferred cryptocurrency</li>
                            <li>Copy the corresponding wallet address</li>
                            <li>Make sure to send from an exchange or wallet that supports the correct network</li>
                            <li>Double-check the address and network before sending</li>
                            <li>Send only the supported cryptocurrency to its corresponding address</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <!-- ! Footer -->
    <Footer />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // @ts-expect-error
            ScrollReveal().reveal('.animate-section', {
                duration: 800,
                origin: 'bottom',
                distance: '50px',
                easing: 'ease-in-out',
                reset: false,
            });

            // @ts-expect-error
            ScrollReveal().reveal('.animate-hero', {
                duration: 600,
                origin: 'left',
                distance: '30px',
                easing: 'ease-in-out',
                reset: false,
            });
        });
    </script>
</html>

<style is:global>
    @font-face {
        font-family: 'Summit';
        src:
            url('/public/assets/fonts/High\ Summit.otf') format('opentype'),
            url('/public/assets/fonts/High\ Summit.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
    }

    .summit {
        font-family: 'Summit', sans-serif;
    }

    html,
    body {
        scroll-behavior: smooth;
        animation-timing-function: ease-out;
        font-family: 'DM Sans', sans-serif;
    }

    textarea {
        resize: none !important;
    }

    section {
        scroll-margin-top: 80px;
    }

    .bg-image {
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .overflow::-webkit-scrollbar {
        width: 8px;
    }

    .overflow::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .overflow::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

    .overflow::-webkit-scrollbar-thumb:hover {
        background: #555;
    }

    .form-control {
        padding: 20px 0;
        width: 100% !important;
    }
</style>
