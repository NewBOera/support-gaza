---
interface Props {
    isLanding: boolean;
}

const { isLanding } = Astro.props;
---

<header class="hidden bg-white text-black md:flex fixed z-50 w-full bg-main shadow-md border-b-[1px] border-[#ffffff44]">
    <nav class="flex w-full mx-auto justify-between items-center md:px-8 h-[80px] md:w-[768px] lg:w-[1024px] xl:w-[1280px] 2xl:w-[1400px]">
        <div class="flex items-center grow gap-10">
            <div class="font-normal text-lg flex items-center gap-4">
                <a href={isLanding ? '#home-section' : 'index.html'}>
                    <img class="object-contain w-8" src="https://shualim.online/wlp/forex/support-gaza/assets/navbar/logo.png" alt="Logo" title="help" />
                </a>
                <span class="summit text-2xl xl:block text-[#DF1818] font-semibold pt-1">Front-aid</span>
            </div>
        </div>
        <div>
            <ul class="font-bold text-[#DF1818] text-base flex gap-10 xl:gap-12">
                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="home-section"><a href={isLanding ? '#home-section' : 'index.html'}>Home</a></li>

                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="about-us-section"><a href={isLanding ? '#about-us-section' : 'index.html#about-us-section'}>About us</a></li>

                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="donators-section">
                    <a href={isLanding ? '#famous-in-action-section' : 'index.html#famous-in-action-section'}>Famous in Action</a>
                </li>

                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="promise-section"><a href={isLanding ? '#promise-section' : 'index.html#promise-section'}>Promise</a></li>

                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="faq.html">
                    <a href={isLanding ? '/faq.html' : '/faq.html'}>FAQ</a>
                </li>
            </ul>
        </div>

        <div class="flex gap-4 grow basis-0 justify-end"></div>
    </nav>
</header>

