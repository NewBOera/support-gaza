---
interface Props {
    isLanding: boolean;
}

const { isLanding } = Astro.props;
---

<header class="hidden bg-white text-black md:flex fixed z-50 w-full bg-main shadow-md border-b-[1px] border-[#ffffff44]">
    <nav class="flex w-full justify-between items-center md:px-8 h-[80px] md:w-[768px] lg:w-[1024px] xl:w-[1280px] 2xl:w-[1400px]">
        <div class="flex items-center grow gap-10">
            <div class="font-normal text-lg flex items-center gap-4">
                <a href={isLanding ? '#home-section' : 'index.html'}><img class="object-contain w-12" src="/public/assets/navbar/logo.png" alt="Logo" title="help" /></a>
                <span class="summit text-xl xl:block text-red-500">Domain.com</span>
            </div>
        </div>
        <div>
            <ul class="font-medium text-red-500 text-base flex gap-10 xl:gap-12">
                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="home-section"><a href={isLanding ? '#home-section' : 'index.html'}>Home</a></li>
                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="about-us-section"><a href={isLanding ? '#about-us-section' : 'index.html#about-us-section'}>About us</a></li>
                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="packages-section">
                    <a href={isLanding ? '#packages-section' : 'index.html#packages-section'}>Famous in Action</a>
                </li>
                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="contact-section"><a href={isLanding ? '#contact-section' : 'index.html#contact-section'}>Promise</a></li>

                <li class="hover:text-yellow transition-all duration-200 nav-item" id-nav="faq-section">
                    <a href={isLanding ? '#faq-section' : 'index.html#faq-section'}>FAQ</a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<style>
    .active {
        color: #7f5a83;
        font-weight: bolder;
    }

    .active::after {
        content: '';
        display: block;
        width: 100%;
        height: 2px;
        background-color: #7f5a83;
    }
</style>
